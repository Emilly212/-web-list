<body>

<div class="container">
  <div class="header">
    Minhas Listas e Checklists
    <button class="theme-toggle" id="theme-toggle" title="Alternar tema">ðŸŒ™</button>
  </div>

  <div class="folders-bar" id="folders-bar"></div>

  <div class="current-folder" id="current-folder"></div>
</div>

<script>
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
let folders = JSON.parse(localStorage.getItem('checklist_folders')) || [
  { id: 1, name: "Compras", color: "#a68a64", tasks: [] },
  { id: 2, name: "Trabalho", color: "#8b7355", tasks: [] },
  { id: 3, name: "Pessoal", color: "#c4b29a", tasks: [] }
];

let currentFolderId = parseInt(localStorage.getItem('currentFolderId')) || 1;
let isDark = localStorage.getItem('darkMode') === 'true';

const body = document.body;
const toggleBtn = document.getElementById('theme-toggle');

if (isDark) {
  body.classList.add('dark');
  toggleBtn.textContent = 'â˜€ï¸';
} else {
  toggleBtn.textContent = 'ðŸŒ™';
}

toggleBtn.onclick = () => {
  isDark = !isDark;
  body.classList.toggle('dark', isDark);
  toggleBtn.textContent = isDark ? 'â˜€ï¸' : 'ðŸŒ™';
  localStorage.setItem('darkMode', isDark);
};

function saveData() {
  localStorage.setItem('checklist_folders', JSON.stringify(folders));
  localStorage.setItem('currentFolderId', currentFolderId);
}

function getCurrentFolder() {
  return folders.find(f => f.id === currentFolderId) || folders[0];
}

function renderFolders() {
  const bar = document.getElementById('folders-bar');
  bar.innerHTML = '';

  folders.forEach(folder => {
    const tab = document.createElement('div');
    tab.className = 'folder-tab' + (folder.id === currentFolderId ? ' active' : '');
    tab.style.borderColor = folder.color;
    tab.style.background = folder.id === currentFolderId 
      ? 'var(--folder-active-bg)' 
      : folder.color + '22';
    tab.innerHTML = `
      <span class="color-dot" style="background:${folder.color}"></span>
      ${folder.name}
    `;
    tab.onclick = () => {
      currentFolderId = folder.id;
      saveData();
      renderAll();
    };
    bar.appendChild(tab);
  });

  const addBtn = document.createElement('button');
  addBtn.className = 'add-folder';
  addBtn.textContent = '+ Nova Pasta';
  addBtn.onclick = addNewFolder;
  bar.appendChild(addBtn);
}

function renderCurrentFolder() {
  const container = document.getElementById('current-folder');
  const folder = getCurrentFolder();
  if (!folder) {
    container.innerHTML = '<div class="empty-state">Nenhuma pasta encontrada</div>';
    return;
  }

  container.innerHTML = `
    <div class="folder-header" style="background:${folder.color}15;">
      <input type="text" value="${folder.name}" 
             onchange="updateFolderName(this.value)">
      <input type="color" value="${folder.color}" 
             onchange="updateFolderColor(this.value)">
    </div>

    <div class="add-task-area">
      <input type="text" id="new-task-input" placeholder="Nova tarefa..." autofocus>
      <button onclick="addTask()">Adicionar</button>
    </div>

    <div class="tasks-grid" id="tasks-grid"></div>
  `;

  const grid = document.getElementById('tasks-grid');
  if (folder.tasks.length === 0) {
    grid.innerHTML = '<div class="empty-state">Nenhuma tarefa nesta pasta ainda...</div>';
  } else {
    folder.tasks.forEach((task, idx) => {
      const item = document.createElement('div');
      item.className = 'task-item';
      item.innerHTML = `
        <input type="checkbox" ${task.done ? 'checked' : ''} 
               onchange="toggleTask(${idx})">
        <span class="task-text ${task.done ? 'completed' : ''}">${task.text}</span>
        <button class="delete-btn" onclick="deleteTask(${idx})">Ã—</button>
      `;
      grid.appendChild(item);
    });
  }

  document.getElementById('new-task-input').onkeypress = e => {
    if (e.key === 'Enter') addTask();
  };
}

function renderAll() {
  renderFolders();
  renderCurrentFolder();
}

// â”€â”€â”€ AÃ§Ãµes â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
function addNewFolder() {
  const name = prompt("Nome da nova pasta:", "Nova Pasta");
  if (!name || !name.trim()) return;

  const newId = folders.length ? Math.max(...folders.map(f => f.id)) + 1 : 1;
  folders.push({
    id: newId,
    name: name.trim(),
    color: '#'+Math.floor(Math.random()*16777215).toString(16),
    tasks: []
  });
  currentFolderId = newId;
  saveData();
  renderAll();
}

function updateFolderName(newName) {
  const folder = getCurrentFolder();
  if (folder) {
    folder.name = newName.trim() || "Sem nome";
    saveData();
    renderFolders();
  }
}

function updateFolderColor(newColor) {
  const folder = getCurrentFolder();
  if (folder) {
    folder.color = newColor;
    saveData();
    renderAll();
  }
}

function addTask() {
  const input = document.getElementById('new-task-input');
  const text = input.value.trim();
  if (!text) return;

  const folder = getCurrentFolder();
  folder.tasks.push({ text, done: false });
  saveData();
  input.value = '';
  renderCurrentFolder();
}

function toggleTask(index) {
  const folder = getCurrentFolder();
  folder.tasks[index].done = !folder.tasks[index].done;
  saveData();
  renderCurrentFolder();
}

function deleteTask(index) {
  if (!confirm("Excluir esta tarefa?")) return;
  const folder = getCurrentFolder();
  folder.tasks.splice(index, 1);
  saveData();
  renderCurrentFolder();
}

// Inicializa
renderAll();
</script>

</body>
</html>
